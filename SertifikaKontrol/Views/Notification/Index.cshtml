@model List<Notification>
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor Accessor



<div class="text-center">
    <h2 class="display-6 mb-5 heading-title">Gelen Başvuru Bildirimleri</h2>
    <div class="table-responsive">
        <table class="table surreal-table">
            <thead>
                <tr>
                    <th class="table-header">Başvuru Bildirimleri</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (Notification not in Model)
                    {
                        <tr>
                            <td class="table-content">Sayın @Accessor?.HttpContext?.Session.GetString("KullaniciAdi") @not.BildirimMetni</td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td class="table-content">Bildirim bulunamadı.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Başlık Stili */
    .heading-title {
        font-family: 'Playfair Display', serif;
        font-size: 2.5rem;
        color: #33475b;
        letter-spacing: 1px;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.15);
    }

    /* Tablo Stili */
    .surreal-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 15px;
        background: rgba(255, 255, 255, 0.85);
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.15);
    }

    /* Tablo Başlık Stili */
    .table-header {
        background: linear-gradient(45deg, #b2dfdb, #80cbc4);
        color: #004d40;
        font-weight: bold;
        text-align: center;
        padding: 1rem;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    /* Tablo İçerik Hücresi Stili */
    .table-content {
        background: linear-gradient(45deg, #e0f7fa, #b2ebf2);
        color: #006064;
        padding: 1rem;
        font-family: 'Roboto', sans-serif;
        font-size: 1.1rem;
        text-align: center;
        transition: background 0.3s, color 0.3s;
        border-radius: 12px;
    }

        /* Hover Efekti */
        .table-content:hover {
            background: linear-gradient(45deg, #80deea, #4dd0e1);
            color: #004d40;
            transform: scale(1.03);
        }

    /* Sayfa Arka Planı */
    body {
        background: radial-gradient(circle, #e0f7fa, #80deea, #4db6ac);
    }
</style>
