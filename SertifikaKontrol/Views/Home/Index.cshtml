@using Microsoft.AspNetCore.Http;  <!--Session işlemleri için using ve inject kullandık-->
@inject IHttpContextAccessor Accessor

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 welcome-title">Sertifika Kontrol Sitesine Hoşgeldin</h1>
    <p class="username">@Accessor?.HttpContext?.Session.GetString("KullaniciAdi")</p>
    <p class="instruction">Sertifikalarla ilgili işlem yapmak için <a class="action-link" asp-action="Index" asp-controller="HomeScreen">tıklayın</a>.</p>
</div>

<style>
    /* Başlık Stili */
    .welcome-title {
        font-family: 'Playfair Display', serif;
        font-size: 2.8rem;
        color: #3b7a8b; /* Soft teal color */
        text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.15);
        margin-bottom: 1rem;
    }

    /* Kullanıcı Adı Stili */
    .username {
        font-size: 1.5rem;
        color: #4a4e69; /* Darker gray for contrast */
        margin: 0.5rem 0 1rem;
        font-style: italic;
    }

    /* Talimat Stili */
    .instruction {
        font-size: 1.2rem;
        color: #22223b; /* Dark purple for a sophisticated touch */
    }

    /* Bağlantı Stili */
    .action-link {
        color: #ff6f61; /* Coral color for a pop of color */
        text-decoration: underline;
        transition: color 0.3s;
    }

        .action-link:hover {
            color: #f6b93b; /* Soft golden yellow on hover */
        }
</style>

