@model AdminLoginModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Admin Girişi Yap</h2>
            
            <form method="post" asp-action="Index">
                <div class="mt-3 text-danger" asp-validation-summary="All"></div> <!--validation summary doğrulama hatalarını yazdırması için-->
                <!-- Email -->
                <div class="mb-3">
                    <label for="username">Admin Kullanıcı Adı</label>
                    <input type="text" class="form-control" id="username" name="username" placeholder="" required> <!--name alanlarıyla eşleşme sağladık-->
                </div>
                <div class="mb-3">
                    <label for="password">Admin Şifre</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="" required><!--name alanlarıyla eşleşme sağladık-->
                </div>
                <div class="container mt-4">
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-danger">Admin Girişi Yap</button>
                    </div>
                </div>
              
            </form>
        </div>
    </div>
</div>